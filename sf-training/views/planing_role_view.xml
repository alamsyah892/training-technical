<?xml version='1.0' encoding='utf-8'?>
<odoo>
    
    <record id="planing_role_training_view_tree" model="ir.ui.view">
        <field name="name">planing.role.training.view.tree</field>
        <field name="model">planing.role.training</field>
        <field name="arch" type="xml">

            <tree string="Planing Role" editable="bottom">
                <field name="active" column_invisible="1"/>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="resource_ids"/>
                <field name="color" widget="color_picker" optional="hide"/>
            </tree>

        </field>
    </record>

    <record id="planing_role_training_view_kanban" model="ir.ui.view">
        <field name="name">planing.role.training.view.kanban</field>
        <field name="model">planing.role.training</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard">
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <t t-name="kanban-menu">
                            <a t-if="widget.editable" role="menuitem" type="edit" class="dropdown-item">Edit</a>
                            <a t-if="widget.deletable" role="menuitem" type="delete" class="dropdown-item">Delete</a>
                            <ul class="oe_kanban_colorpicker" data-field="color" role="popup"/>
                        </t>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="planing_role_training_view_search" model="ir.ui.view">
        <field name="name">planing.role.training.view.search</field>
        <field name="model">planing.role.training</field>
        <field name="arch" type="xml">
            <search string="Planing Role Search">
                <field name="name"/>
                <field name="resource_ids"/>
                <field name="my_departement" string="My Departement"/>
            </search>
        </field>
    </record>
</odoo>